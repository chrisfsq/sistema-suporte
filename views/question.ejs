<%- include ('partials/header.ejs') %>
<body class="bg-light">
    <%- include ('partials/navbar.ejs') %>
    <div class="container">

        <div class="card">
            <div class="card-header">
                <h3>Qual sua dúvida?</h3>
            </div>
            <div class="card-body">
                <hr>
                <form method="post" action="/send" enctype="multipart/form-data">
                    <br>
                    <label for="name">Seu nome:</label>
                    <input type="text" placeholder="Nome" id="name" name="name" class="form-control" required>
                    <br>
                    <label for="title">Titulo da pergunta:</label>
                    <input type="text" placeholder="Título" class="form-control" id="title" name="title">
                    <br>
                    <label for="textarea">Descreva aqui a sua dúvida:</label>
                    <textarea name="textarea" id="textarea" cols="30" rows="10" placeholder="Descreva sua dúvida"
                        class="form-control"></textarea>
                    <br>
                    <input type="file" name="image" id="image" class="form-control">
                    <br>
                    <button class="btn btn-primary">ENVIAR</button>
                    <br>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

