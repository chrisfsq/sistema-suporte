<%- include ('partials/header.ejs') %>

    <body>
        <%- include ('partials/navbar.ejs') %>

            <div class="container">
                <hr>
                <h1 class="d-flex justify-content-around">Perguntas <a href="/question" class="btn btn-warning">Deixe seu dúvida</a></h1>
                <hr>
                
                <% question.forEach(question=> { %>

                    <div class="card mb-5">
                        <div class="card-header">
                            <h4>
                                <%= question.title %>
                            </h4>
                        </div>
                        <div class="card-body">
                        
                        <div class="card-text">
                            <p>
                                <%= question.textarea %>
                            </p>
                        </div>

                        <div class="card-text">
                            <img style="max-width: 300px;" src="/uploads/<%= question.image %>" alt="Imagem da questão">
                        </div>

                        <p class="card-text"><small class="text-muted">Por <strong><%= question.name %></strong> em: <br> <%= new Date(question.createdAt).toLocaleString('pt-BR') %></small></p>

                        <div class="card-footer ">
                            <button class="btn btn-success">Responder</button>
                        </div>
                    </div>

                </div>
                    <% }) %>
            </div>
    </body>

    </html>