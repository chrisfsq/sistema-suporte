<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Espera até que o documento esteja completamente carregado antes de executar o código
    $(document).ready(function() {
        // Ao clicar em qualquer imagem com a classe .questionImage, abre o modal com a imagem expandida
        $('.questionImage').on('click', function() {
            const imagePath = $(this).attr('src'); // Obtém o caminho da imagem clicada
            $('#expandedImage').attr('src', imagePath); // Define o caminho da imagem expandida
            $('#imageModal').modal('show'); // Abre o modal
        });
    });
</script>
